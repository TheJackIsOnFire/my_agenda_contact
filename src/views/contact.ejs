<!doctype html>
<html lang="pt-br">
<%- include('includes/head')%>
<body>
    <%- include('includes/navbar')%>
    <div class="container">
        <div class="row">
            <div class="col-lg-2"></div>
            <div class="col-lg-8 my-3">
                <h1 class="display-1 text-center">Contato</h1>
                <p class="text-center lead">Crie ou edite seu contato abaixo.</p>
            </div>
            
            <%- include('includes/messages')%>

            <% if(contato.id) {%>
            <form action="/contato/edit/<%= contato._id%>" method="POST">
            <% } else { %>
            <form action="/contato/register" method="POST">
            <% }%>
				<input type="hidden" name="_csrf" value=<%= csrfToken%> />
				<div class="form-group my-3">
					<label class="my-1">Nome</label>
					<input value="<%= contato.nome %>" type="text" class="form-control" name="nome" placeholder="nome" />
				</div>
                <div class="form-group my-3">
					<label class="my-1">Sobrenome</label>
					<input value="<%= contato.sobrenome %>" type="text" class="form-control" name="sobrenome" placeholder="sobrenome" />
				</div>
                <div class="form-group my-3">
					<label class="my-1">Email</label>
					<input value="<%= contato.email %>" type="email" class="form-control" name="email" placeholder="e-mail" />
				</div>
                <div class="form-group my-3">
					<label class="my-1">Telefone</label>
					<input value="<%= contato.telefone %>"  type="tel" class="form-control" name="telefone" placeholder="telefone" />
				</div>
                <% if(!contato.id) {%>
                <button type="submit" class="btn btn-primary">Adicionar contato</button>
                <% } else { %>
                <button type="submit" class="btn btn-primary">Editar e Salvar</button>
                <% }%>
			</form>
        </div>
    </div>

    <%- include('includes/footer')%>
</body>
</html>