<!DOCTYPE html>
<html lang="pt-br">
  <%- include('includes/head')%>
  <body>
    <%- include('includes/navbar')%>
    <div class="container">
      <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-8 my-3">
          <h1 class="display-1 text-center">Agenda</h1>
          <p class="text-center lead">Seus contatos estão abaixo</p>
      </div>
    </div>
    <%- include('includes/messages')%>

    <% if(contacts.length > 0) { %>
      <div class="responsive-table">
        <table class="table my-3">
          <% contacts.forEach(contact => { %>
          <tr>
            <td><%= contact.name %></td>
            <td><%= contact.lastName %></td>
            <td><%= contact.telephone %></td>
            <td><%= contact.email %></td>
            <td><a href="/contact/<%= contact.id %>">Editar</a></td>
            <td><a class="text-danger" href="/contact/delete/<%= contact.id %>">Excluir</a></td>
          </tr>
          <% }); %>
        </table>
      </div>
              <% } else {%>
                  <p class="text-center lead">Não existem contatos na sua agenda.</p>
              <% }%>

    <%- include('includes/footer')%>
  </body>
</html>
