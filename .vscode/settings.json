{
	"editor.codeActionsOnSave": {
		"source.fixAll.eslint": "always"
	},
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"editor.formatOnPaste": true, // obrigatório
	"editor.formatOnType": true, // obrigatório
	"editor.formatOnSave": true, // opcional
	"editor.formatOnSaveMode": "file", // obrigatório para formatar ao salvar
	"files.autoSave": "onFocusChange" // opcional, mas recomendado
}
